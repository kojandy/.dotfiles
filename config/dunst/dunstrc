[global]
    follow = mouse
    geometry = "300x5-10+25"
    shrink = yes
    padding = 8
    horizontal_padding = 8
    frame_width = 1
    frame_color = "#ffffff"
    separator_color = auto
    idle_threshold = 120

    font = Monospace 10
    markup = full
    format = "<b>%s</b>\n%b%p"
    show_age_threshold = 60
    word_wrap = yes

    max_icon_size = 32

    sticky_history = yes

    dmenu = /usr/bin/dmenu -p dunst:
    browser = xdg-open
    corner_radius = 0

    mouse_left_click = do_action
    mouse_middle_click = close_all
    mouse_right_click = close_current

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#222222"
    foreground = "#888888"
    timeout = 10

[urgency_normal]
    background = "#0e4d92"
    foreground = "#ffffff"
    timeout = 10

[urgency_critical]
    background = "#b80f0a"
    foreground = "#ffffff"
    # frame_color = "#ff0000"
    timeout = 0

[fullscreen_pushback_everything]
    fullscreen = pushback
