set ignorecase
set incsearch
set scrolloff=3
set smartcase
set ideajoin
set number
set relativenumber

Plug 'tpope/vim-surround'
Plug 'tpope/vim-commentary'
Plug 'kana/vim-textobj-entire'
Plug 'machakann/vim-highlightedyank'

sethandler <S-Tab> a:vim
map <S-Tab> <Action>(HideAllWindows)

map <C-H> <C-W><C-H>
map <C-J> <C-W><C-J>
map <C-K> <C-W><C-K>
map <C-L> <C-W><C-L>
