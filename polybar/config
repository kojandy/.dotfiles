[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/top]
width = 100%
height = 50

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

module-margin = 1

padding-right = 2

font-0 = notosanscjkkr:size=20
font-1 = "Font Awesome 5 Free:style=Regular:size=20"
font-2 = "Font Awesome 5 Free:style=Solid:size=20"
font-3 = "Font Awesome 5 Brands:size=20"

modules-left = bspwm
modules-center = title
modules-right = playerctl alsa battery wlan date

cursor-click = pointer
cursor-scroll = ns-resize

tray-position = right
tray-maxsize = 25

wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty =
; label-empty = %index%
; label-empty-foreground = ${colors.foreground-alt}
; label-empty-padding = 2

[module/alsa]
type = internal/alsa

label-volume =  %percentage%%

label-muted =  muted

[module/backlight]
type = internal/backlight

card = intel_backlight

label =  %percentage%%

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC0

label-charging =  %percentage%%
label-discharging =  %percentage%%
label-full =  %percentage%%

[module/date]
type = internal/date

date =
date-alt = "%Y-%m-%d %a"

time = %l:%M %p
time-alt = %H:%M:%S

label = %date% %time%

[module/title]
type = internal/xwindow

[module/wlan]
type = internal/network
interface = wlp2s0

label-connected =  %essid%

[module/playerctl]
type = custom/script
exec = ~/.config/polybar/playerctl.sh
