# bspwm
super + q
    bspc node --close

super + f
    bspc desktop --layout next

super + semicolon
    windowpromoter

super + {t,shift+t,s}
    bspc node --state {tiled,pseudo_tiled,floating}

super + {minus,equal}
    bspc config -d focused window_gap {0,50}

super + {plus,underscore}
    bspc config -d focused window_gap $(($(bspc config -d focused window_gap) {+,-} 10))

super + {m,ctrl+x,ctrl+s}
    bspc node --flag {hidden,locked,sticky}

super + shift + m
    bspc node $(bspc query --nodes --node .hidden.local | tail -n1) --flag hidden=off --focus

super + {_,shift+}{h,j,k,l}
    bspc node --{focus,swap} {west,south,north,east}

super + {_,shift+}{1-9,0}
    bspc {desktop --focus, node --to-desktop} '^{1-9,10}'

super + {comma,period}
    bspc node --focus {prev,next}.local

super + bracket{left,right}
    bspc desktop --focus {prev,next}.occupied.local

super + shift + bracket{left,right}
    bspc desktop --swap {prev,next}.local

super + grave
    bspc desktop --focus last

super + Tab
    bspc node --focus last

super + ctrl + {h,j,k,l}
    bspc node --presel-dir {west,south,north,east}

super + ctrl + {1-9}
    bspc node --presel-ratio 0.{1-9}

super + ctrl + space
    bspc query --nodes --desktop | xargs -I id -n 1 bspc node id --presel-dir cancel

super + alt + {h,j,k,l}
    bspc node --resize {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + alt + shift + {h,j,k,l}
    bspc node --resize {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + {Left,Down,Up,Right}
    bspc node --move {-40 0,0 40,0 -40,40 0}

# Launch apps
super + Return
    $TERMINAL

super + space
    rofi -show run

super + slash
    rofi -show window

super + shift + w
    $BROWSER

super + shift + e
    emacsclient -c

super + shift + f
    thunar

super + shift + p
    $TERMINAL -e htop

super + Escape
    light-locker-command --lock

super + shift + Escape
    systemctl suspend

Print
    scrot "$HOME"'/Scrot/%Y-%m-%d_%H:%M:%S_$wx$h_scrot.png' && \
    notify-send Scrot 'Saved!'

control + Print
    sleep 0.2; \
    scrot -s "$HOME"'/Scrot/%Y-%m-%d_%H:%M:%S_$wx$h_scrot.png' && \
    notify-send Scrot 'Saved!'

XF86AudioMute
    amixer --quiet set Master toggle

XF86Audio{Lower,Raise}Volume
    amixer --quiet set Master 5%{-,+} unmute

XF86Audio{Prev,Play,Next}
    playerctl {previous,play-pause,next}

# XF86Search

XF86MonBrightness{Down,Up}
    backlight {-,+} 10
