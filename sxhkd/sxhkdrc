# bspwm
super + q
    bspc node --close

super + f
    bspc desktop --layout next

super + semicolon
    windowpromoter

super + {t,shift+t,s}
    bspc node --state {tiled,pseudo_tiled,floating}

super + {minus,equal}
    bspc config -d focused window_gap {0,50}

super + {plus,underscore}
    bspc config -d focused window_gap $(($(bspc config -d focused window_gap) {+,-} 10))

super + {m,ctrl+x,ctrl+s}
    bspc node --flag {hidden,locked,sticky}

super + shift + m
    bspc node $(bspc query -N -n .hidden.local | tail -n1) --flag hidden=off

super + {_,shift+}{h,j,k,l}
    bspc node --{focus,swap} {west,south,north,east}

super + {_,shift+}{1-9,0}
    bspc {desktop --focus, node --to-desktop} '^{1-9,10}'

super + {comma,period}
    bspc node --focus {prev,next}.local

super + {_,shift+}bracket{left,right}
    bspc desktop {--focus,--swap} {prev,next}.local

super + Tab
    bspc desktop --focus last

super + ctrl + {h,j,k,l}
    bspc node --presel-dir {west,south,north,east}

super + ctrl + {1-9}
    bspc node --presel-ratio 0.{1-9}

super + ctrl + space
    bspc query --nodes --desktop | xargs -I id -n 1 bspc node id --presel-dir cancel

super + alt + {h,j,k,l}
    bspc node --resize {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + alt + shift + {h,j,k,l}
    bspc node --resize {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + {Left,Down,Up,Right}
    bspc node --move {-40 0,0 40,0 -40,40 0}

# Launch apps
super + Return
    $TERMINAL

super + space
    rofi -show run

super + shift + w
    $BROWSER

super + shift + f
    $TERMINAL -e ranger

super + shift + p
    $TERMINAL -e htop

super + grave
    betterlockscreen -l

super + Escape
    systemctl suspend

XF86AudioMute
    amixer --quiet set Master toggle

XF86Audio{Lower,Raise}Volume
    amixer --quiet set Master 5%{-,+} unmute

# XF86AudioPrev

# XF86AudioPlay

# XF86AudioNext

# XF86Search

# XF86MonBrightnessDown

# XF86MonBrightnessUp
