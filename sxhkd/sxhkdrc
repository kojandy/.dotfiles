# bspwm
super + q
    bspc node --close

super + f
    bspc desktop --layout next

super + semicolon
    windowpromoter

super + {t,shift+t,s}
    bspc node --state {tiled,pseudo_tiled,floating}

super + m
    bspc node --flag hidden

super + shift + m
    bspc node $(bspc query -N -n .hidden | tail -n1) --flag hidden=off

super + {_,shift+}{h,j,k,l}
    bspc node --{focus,swap} {west,south,north,east}

super + {_,shift+}{1-9,0}
    bspc {desktop --focus, node --to-desktop} '^{1-9,10}'

super + {_,shift+}c
    bspc node --focus {next,prev}.local

super + bracket{left,right}
    bspc desktop -f {prev,next}.local

super + {grave,Tab}
    bspc {node,desktop} --focus last

super + ctrl + {h,j,k,l}
    bspc node --presel-dir {west,south,north,east}

super + ctrl + {1-9}
    bspc node --presel-ratio 0.{1-9}

super + ctrl + space
    bspc query --nodes --desktop | xargs -I id -n 1 bspc node id --presel-dir cancel

super + {u,i,o,p}
    bspc node --resize {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + shift + {u,i,o,p}
    bspc node --resize {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + {Left,Down,Up,Right}
    bspc node --move {-40 0,0 40,0 -40,40 0}

# Launch apps
super + Return
    $TERMINAL

super + @space
    dmenu_run

super + shift + w
    $BROWSER

super + shift + f
    $TERMINAL -e $FILE

XF86AudioMute
    amixer --quiet set Master toggle

XF86AudioLowerVolume
    amixer --quiet set Master 5%- unmute

XF86AudioRaiseVolume
    amixer --quiet set Master 5%+ unmute

